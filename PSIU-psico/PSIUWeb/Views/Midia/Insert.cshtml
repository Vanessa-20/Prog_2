@model Midia

<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-6">
                <h1 class="m-0">
                    INSERIR: <small>MIDIA</small>
                </h1>
            </div>
            <div class="col-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-action="Index"
                           asp-controller="Midia">
                            Mostrar
                        </a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Insert" style="width:100%;">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" />

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="URL" class="control-label"></label>
                        <input asp-for="URL" class="form-control"
                               placeholder="URL" />
                        <span asp-validation-for="URL" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="TipoMidia" class="control-label"></label>
                        <input asp-for="TipoMidia" class="form-control"
                               placeholder="Tipo de Midia" />
                        <span asp-validation-for="TipoMidia" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />

            <div class="form-group">
                <input type="submit" value="Atualizar"
                       class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>