@model IEnumerable<Midia>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Midia
                        </h3>
                    </div>
                    <div class="card-body">

                        <a asp-controller="Midia" asp-action="Insert">
                            Inclui novo
                        </a>

                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.MidiaId)</th>
                                    <th>@Html.DisplayNameFor(model => model.URL)</th>
                                    <th>@Html.DisplayNameFor(model => model.TipoMidia)</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in Model)
                                {
                                    <tr>
                                        <td>@m.MidiaId</td>
                                        <td>@m.URL</td>
                                        <td>@m.TipoMidia</td>
                                        <td>
                                            <div class="row">
                                                <div class="col-6">
                                                    <a asp-controller="Midia"
                                                       asp-action="Edit"
                                                       asp-route-id="@m.MidiaId">
                                                        Editar
                                                    </a>
                                                </div>
                                                <div class="col-6">
                                                    <a asp-controller="Midia"
                                                       asp-action="Delete"
                                                       asp-route-id="@m.MidiaId">
                                                        Excluir
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>